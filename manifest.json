{
    "name": "Tabby",
    "description": "A chrome extension for single-click tab sorting and grouping",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
        "cookies",
        "tabs",
        "tabGroups",
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}